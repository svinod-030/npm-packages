  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "feature-toggle-js": "^1.2.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2"
  }
} 