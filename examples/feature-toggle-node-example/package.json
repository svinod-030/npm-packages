{
  "name": "feature-toggle-node-example",
  "version": "1.0.0",
  "description": "Example of using feature-toggle-js in a Node.js application",
  "main": "index.js",
  "scripts": {
    "start": "ts-node src/index.ts",
    "start:server": "ts-node src/api-server.ts",
